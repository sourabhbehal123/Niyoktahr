<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    tools:context="com.example.hp_pc.niyoktahr.employer_fragment.Employer_detail">
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_file"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etCompany"
        android:layout_marginStart="16dp" app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" android:hint="Company Name"
        android:layout_marginEnd="16dp" app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.33"
        android:layout_marginTop="48dp" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024"

        app:layout_constraintBottom_toTopOf="@+id/btemployee" android:layout_marginBottom="8dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:background="@drawable/edit_file"
        android:ems="10"
        android:id="@+id/etProfession"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" android:layout_marginRight="16dp"
        android:layout_marginStart="16dp" app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:hint="Organization Email"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/etjob" android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.7" app:layout_constraintHorizontal_bias="0.36"/>
    <EditText

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_file"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etjob"
        android:layout_marginEnd="16dp" app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent" android:layout_marginLeft="16dp"
        android:hint="Mobile Number"
        android:layout_marginTop="192dp" app:layout_constraintTop_toBottomOf="@+id/etCompany"
        app:layout_constraintVertical_bias="0.72" app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintBottom_toTopOf="@+id/btemployee" android:layout_marginBottom="8dp"/>
    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_style"
        android:textColor="#ffffff"
        android:id="@+id/btemployeesumbit"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent" android:layout_marginRight="16dp"
        android:layout_marginStart="16dp" app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintVertical_bias="0.75"/>


</android.support.constraint.ConstraintLayout>
